doctype html
html(lang='zh-CN')
    head
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='keywords',content='#{keywords ? keywords : "blog,icyse,github"}')
        meta(name='description',content='#{description ? description : "blog"}')
        meta(name='fragment', content='!')
        base(href='/')
        link(type="image/x-icon",href="/public/favicon.ico",media="screen",rel='shortcut icon')
        link(href='/public/stylesheets/pure-min.css', rel='stylesheet')
        link(href='/public/stylesheets/grids-responsive-min.css', rel='stylesheet')
        link(href='/public/stylesheets/nprogress.css', rel='stylesheet')
        link(href='/public/fonts/fontello/css/fontello.css', rel='stylesheet')
        link(href='/public/stylesheets/blog.css', rel='stylesheet')
        link(href='/public/stylesheets/style.css', rel='stylesheet')
        <!--[if lte IE 8]>
        script(type='text/javascript', src='/public/javascripts/vendor/html5shiv.min.js', charset='utf-8')
        <![endif]-->
        title= 'Icyse Blog &ndash; GitHub.io by icyse'
    body(ng-app='icyse-blog', ng-controller='ApplicationController', when-scrolled='loadMore()')
        a(href='https://github.com/icyse/icyse.github.io', target='_blank')
            img#fork-me(ng-src='/public/images/fork-me-on-github.png', alt='Fork me on GitHub')
        div#layout.pure-g
            div.sidebar.pure-u-1.pure-u-md-1-5
                div.header
                    a.logo(href='http://github.com/icyse')
                        img.lazy-load(ng-src='/public/images/avatar.ico', alt='icyse', lazy-load)
                    h1.brand-title Icyse
                    h2.brand-tagline Icyse Blog &ndash; GitHub.io by icyse
                    nav.nav
                        ul.nav-list
                            li.nav-item
                                a.pure-button(ng-click='changeLanguage("en_US")') {{'ENGLISH'|translate}}
                            li.nav-item
                                a.pure-button(ng-click='changeLanguage("zh_CN")') {{'CHINESE'|translate}}
            div#main.content.pure-u-1.pure-u-md-4-5
                section#content.fade(ng-view)
                footer.footer
                    div.pure-menu.pure-menu-horizontal
                        ul
                            li.pure-menu-item
                                a.pure-menu-link(ng-href='/#/about') About
                            li.pure-menu-item
                                a.pure-menu-link(href='http://twitter.com/CaiHuabin/') Twitter
                            li.pure-menu-item
                                a.pure-menu-link(href='http://github.com/icyse/') GitHub
        script(type='text/javascript', src='/public/javascripts/scale.fix.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/nprogress.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/markdown.min.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/angular-1.5.0/angular.min.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/angular-1.5.0/angular-resource.min.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/angular-1.5.0/angular-route.min.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/angular-1.5.0/angular-animate.min.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/vendor/angular-1.5.0/angular-translate.min.js', charset='utf-8')
        
        script(type='text/javascript', src='/public/javascripts/configs/configs.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/filters/filters.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/services/services.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/directives/directives.js', charset='utf-8')
        script(type='text/javascript', src='/public/javascripts/controllers/controllers.js', charset='utf-8')
div.container
    div.posts.animate-pop-up(ng-repeat='posts in postsList')
        h1.content-subhead {{posts.period}}
        section.post(ng-repeat='post in posts.posts')
            header.post-header
                img.post-avatar(alt='Icyse&#x27;s avatar', height='48', width='48', ng-src='/public/images/avatar.ico')
                h2.post-title
                    a(ng-href='/#/{{post.alias}}') {{post.title}}
                p.post-meta By 
                    a.post-author(ng-href='/#/') {{post.user.username}}
                    |  under 
                    a(class='post-category post-category-{{category}} animate-pop-up', ng-href='#', ng-repeat='category in post.categoryList') {{category}}
                    |  at 
                    span {{post.createdTime}}
            div.post-description
                p {{post.summary}}
                div.post-images.pure-g(ng-if='post.imgList.length')
                    div.pure-u-1.pure-u-md-1-3.animate-pop-up(ng-repeat='img in post.imgList')
                        a(href='')
                            img.pure-img-responsive.hover(alt='{{img.alt}}', ng-src='{{img.src}}')
                        div.post-image-meta
                            h3 {{img.title}}